<resources>

    <!-- Base application theme. -->
    <style name="AppMaterialTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppMaterialTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="NavDrawerTextStyle" parent="AppMaterialTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">#FFFFFF</item>
    </style>


    <style name="list" parent="AppMaterialTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">#FFFFFF</item>
    </style>
</resources>
